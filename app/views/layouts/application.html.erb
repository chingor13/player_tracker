<!DOCTYPE html>
<html>
<head>
  <title>PlayerTracker</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <%= link_to "Home", root_path, :class => "brand" %>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <%= nav_tab("Games", :games, games_path) %>
            <%= nav_tab("Players", :players, players_path) %>
            <%= nav_tab("Pitches", :pitches, pitches_path) %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <% if content_for?(:subnav) %>
      <div class="row">
        <div class="span3">
          <%= content_for(:subnav) %>
        </div>
        <div class="span9">
          <%= yield %>
        </div>
      </div>
    <% else %>
      <%= yield %>
    <% end %>
  </div>

</body>
</html>
